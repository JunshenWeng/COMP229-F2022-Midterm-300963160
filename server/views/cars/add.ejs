<% include ../partials/header.ejs %>

<!--Content fot the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title %></h1>

            <form class="form" method="post">
                <div class="from-group">
                    <label for="CarnameTextField">CarName</label>
                    <input
                        type="text"
                        class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Car's Name:"
                        name=Carname"
                        required
                    />
                </div>

                <div class="from-group">
                    <label for="CategoryTextField">Category</label>
                    <input
                        type="text"
                        class="form-control"
                        id="CategoryTextField"
                        placeholder="Enter the Car's Category:"
                        name="Category"
                        required
                    />
                </div>

                <div class="from-group">
                    <label for="CarmodelTextField">Car Model</label>
                    <input
                        type="text"
                        class="form-control"
                        id="CarmodelTextField"
                        placeholder="Enter the Car's Model:"
                        name="Carmodel"
                        required
                    />
                </div>

                <div class="from-group">
                    <label for="PriceTextField">Price</label>
                    <input
                        type="number"
                        class="form-control"
                        id="PriceTextField"
                        placeholder="Enter the Price of Car:"
                        name="Price"
                        required
                    />
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>Submit
                </button>

                <a href="/cars" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>